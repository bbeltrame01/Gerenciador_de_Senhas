<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Final.Pages.Cadastro">
    <StackLayout Margin="25,25,25,25">
        <Label x:Name="lbID" Text="Código:" />
        <Entry x:Name="txID" Text="0" IsEnabled="False" Placeholder="Digite o código da Senha..." />

        <Label x:Name="lbNome" Text="Nome:" />
        <Entry x:Name="txNome" Placeholder="Digite a Descrição..." />

        <Label x:Name="lbUsuario" Text="Usuário:" />
        <Entry x:Name="txUsuario" Placeholder="Digite o usuário..." />

        <Label x:Name="lbSenha" Text="Senha:" />
        <Entry x:Name="txSenha" Placeholder="Digite a Senha..." />

        <Label x:Name="lbObs" Text="Observações:" />
        <Entry x:Name="txObs" />

        <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
            <Button x:Name="btSalvar" Clicked="btSalvar_Clicked" Text="Salvar" CornerRadius="15" FontSize="20" WidthRequest="170"/>
            <Button x:Name="btCancelar"  Clicked="btCancelar_Clicked"  Text="Cancelar"  CornerRadius="15" FontSize="20" WidthRequest="170"/>
        </StackLayout>
    </StackLayout>
</ContentPage>